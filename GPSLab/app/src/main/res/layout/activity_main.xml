<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editMinTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Time (ms)"
        android:inputType="number" />

    <EditText
        android:id="@+id/editMinDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Distance (m)"
        android:inputType="number" />

    <TextView
        android:id="@+id/clockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="30sp"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonIncreaseDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Distance by 10m" />

    <EditText
        android:id="@+id/editLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time and Distance Log"
        android:inputType="none"
        android:focusable="false"
        android:gravity="start|top"
        android:scrollbars="vertical" />

    <!--<TextView
        android:id="@+id/dublinZooCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dublin Zoo"
        android:textSize="16sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/currentLocationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Location: N/A"
        android:textSize="16sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address will be dislayed here"
        android:textSize="16sp"
        android:gravity="center" /> -->

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Updates"
        android:layout_margin="16dp" />
    
    <ListView
        android:id="@+id/locationHistoryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
